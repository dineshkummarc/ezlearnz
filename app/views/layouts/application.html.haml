!!! strict
%html{ 'xml:lang' => "en" }
  %head
    %title ezLearnz | making learning easy
    -# More descriptive title here
    <link rel="shortcut icon" href="favicon.ico" />
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag 'style'
    = stylesheet_link_tag 'widgets'
    = stylesheet_link_tag 'layout'
    = javascript_include_tag :defaults  
    = javascript_include_tiny_mce_if_used
    = tiny_mce if using_tiny_mce?
    %script
      jQuery.noConflict();

  %body
    #header
      .offset
        = link_to image_tag("logo.png", :border=>0), "/"    
    #frame
      #nav_bar
        .login.float_right
          - if logged_in?
            == logged in as #{current_user.login}
            =  link_to "logout", logout_path
          - else 
            = link_to "login", login_path
            |
            = link_to "register", new_user_path
        -# TODO: breadcrumbs here
      = flash[:notice]
      = yield
      %br.clear_both/
    #footer
      %p.text_centered
        = link_to "Home", "/"
        &middot;
        = link_to "News", "http://news.ezlearnz.com"
        &middot;
        = link_to "Blog", "http://blog.ezlearnz.com"
        &middot;
        = link_to "Support Forums", "http://getsatisfaction.com/ezlearnz"
        &middot;
        = link_to "Contact Us", "http://www.emailmeform.com/fid.php?formid=55694"
        %br/
        &copy;2008 ezLearnz. All rights reserved.
