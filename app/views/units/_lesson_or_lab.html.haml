.brightbottomborder.clear_both
  .float_right
    = link_to "edit", edit_unit_path(@unit)
    = link_to "delete", @unit, :method => :delete
  %h2= @unit.title
  %hr
%strong Description:
= @unit.description
%br
%br.clear_both

- for part in @unit.parts
  .lesson.brightbottomborder.clear_both
    .float_right
      move
      = link_to "edit", edit_unit_part_path(@unit, part)
      = link_to "delete", unit_part_path(@unit, part)
    %h4== Part #{part.position}: #{part.title}
  - if part.lecture_media?
    .video.light_blue= part.lecture_media
  %p= part.body_or_instructions 
