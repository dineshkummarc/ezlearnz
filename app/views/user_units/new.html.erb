<h1>New user_unit</h1>

<%= error_messages_for :user_unit %>

<% form_for(@user_unit) do |f| %>
  <p>
    <b>Parent</b><br />
    <%= f.text_field :parent_id %>
  </p>

  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <b>Unit</b><br />
    <%= f.text_field :unit_id %>
  </p>

  <p>
    <b>Instructor</b><br />
    <%= f.check_box :instructor %>
  </p>

  <p>
    <b>Grade</b><br />
    <%= f.text_field :grade %>
  </p>

  <p>
    <b>Percent completed if student</b><br />
    <%= f.text_field :percent_completed_if_student %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', user_units_path %>
